{
  "name": "Hovertab",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Indicate when a link will open in a new tab as you hover over it",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "css": [
        "styles/main.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/main.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
